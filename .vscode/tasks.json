{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cleanup",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "clean-dist"
      ]
    },
    {
      "label": "test file",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "test",
        "${file}"
      ],
      "group": "test",
      "problemMatcher": "$tsc"
    },
    {
      "type": "gulp",
      "task": "project-build",
      "problemMatcher": [
        "$gulp-tsc"
      ]
    },
    {
      "type": "gulp",
      "task": "build",
      "problemMatcher": [
        "$tsc"
      ]
    }
  ]
}